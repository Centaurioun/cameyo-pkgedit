                            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                                <TextBlock Text="Teleported install" HorizontalAlignment="Center" />
                                <TextBlock Text="(Cool)" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </Button>
